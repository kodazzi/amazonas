{% extends "amazonas.admin.twig" %}

{% block stylesheet_header %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" media="screen" href="/src/datatables/dataTables.bootstrap.css" />
{% endblock %}

{% block javascript_footer %}
    {{ parent() }}

    {% if items %}

    {% endif %}

{% endblock %}

{% block content %}

    <section class="content-header">
        <h1>
            {{ view_title|raw }}
            <small>Administraci&oacute;n</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active"><i class="fa fa-dashboard"></i> {{ view_title|raw }}</li>
        </ol>
    </section>

    <section class="content">

        <div class="row">
            <div class="col-lg-9">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Lista de {{ view_title|raw }} <a href="{{ build_url(default_route, {'controller':view_controller,'action':'new'}) }}" class="btn btn-primary btn-sm">Nuevo</a></h3>
                    </div>

                    <div class="box-body">

                        <table class="table table-bordered table-hover" id="dataTables-list">
                            <thead>
                            <tr>
                                <th width="5%">ID</th>
                                <th>Idioma</th>
                                <th width="10%" class="text-center">C&oacute;digo</th>
                                <th width="15%" class="text-center">Opciones</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for item in items %}
                                <tr class="odd gradeX">
                                    <td width="10%">{{ item.id }}</td>
                                    <td>{{ item.name|raw }}</td>
                                    <td class="text-center">{{ item.code }}</td>
                                    <td width="11%" class="text-center">
                                        <a href="{{ build_url(default_route, {'controller':view_controller,'action':'edit','param1':item.id}) }}"><i class="fa fa-pencil-square-o"></i></a>
                                        <a href="{{ build_url(default_route, {'controller':view_controller,'action':'delete','param1':item.id}) }}"><i class="fa fa-remove text-danger"></i></a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr class="odd gradeX">
                                    <td colspan="5">No se encontraron registros</td>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">

            </div>
        </div>
    </section>

{% endblock %}